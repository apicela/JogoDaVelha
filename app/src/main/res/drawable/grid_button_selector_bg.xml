<?xml version="1.0" encoding="utf-8"?><!-- button_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black_50" />
            <corners android:radius="12dp"></corners>
        </shape>
    </item>
    <!-- Shadow -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_80" />
            <corners android:radius="11dp"></corners>

        </shape>
    </item>
</layer-list>
